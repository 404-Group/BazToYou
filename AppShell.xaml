<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="BazToYou.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:BazToYou"
    Shell.FlyoutBehavior="Flyout"
    Shell.TabBarIsVisible="False"
    Shell.BackgroundColor="#00533E">
    
    <FlyoutItem Title="Home" FlyoutDisplayOptions="AsMultipleItems">
        <ShellContent Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}" />

        <ShellContent Title="My Profile"
         ContentTemplate="{DataTemplate local:ProfilePage}" />

        <ShellContent Title="Available Orders"
        ContentTemplate="{DataTemplate local:AvailableOrdersPage}" />
        
        <ShellContent Title="Current Order"
        ContentTemplate="{DataTemplate local:OrderPage}" />

    </FlyoutItem>

</Shell>
